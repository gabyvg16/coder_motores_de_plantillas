doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
        link(rel="stylesheet" href="styles.css")
        title Desafio 5
    body
        div(class="container")
            nav(class="navbar navbar-expand-lg navbar-light bg-light navBar")
                div(class="collapse navbar-collapse" id="navbarSupportedContent")
                    ul(class="navbar-nav mr-auto")
                        li(class="nav-item active")
                            a(class="nav-link" href="/") Agregar producto
                        li(class="nav-item")
                            a(class="nav-link" href="/productos") Listado de productos

        h1 Listado de productos 

        div(class="container")
            if hasAny
               each producto in productLista
                    div(class="card" style="width: 18rem;")
                        img(class="card-img-top" src=`${producto.thumbnail}` alt=`Imagen de ${producto.title}`)
                        div(class="card-body")
                            h5(class="card-title")=producto.title
                            p(class="card-text") Precio: $ #{producto.price}
            else 
                h3 No hay productos
